<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleActivityRecognition.Views.RunningAppView"
             Title="RunningAppView">
    <ScrollView>
        <StackLayout x:Name="MainSlack">
            
            <Button x:Name="StartButton"    
                    Text="Start" />
                    
            <Button x:Name="StopButton"    
                    Text="Stop"/>
                    
            <Button x:Name="Button1"    
                    Text="Option1" Clicked="Handle_Clicked"/>
                    
            <Button x:Name="Button2"    
                    Text="Option2" Clicked="Handle_Clicked"/>
                    
            <Button x:Name="Button3"    
                    Text="Option3" Clicked="Handle_Clicked"/>
                    
            <Button x:Name="Button4"    
                    Text="Option4" Clicked="Handle_Clicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>